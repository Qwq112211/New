import telebot
import os

# Инициализация бота
bot = telebot.TeleBot('YOUR_BOT_API_TOKEN')

# Обработчик сообщений из группы
@bot.message_handler(content_types=['text'], func=lambda message: message.chat.id == YOUR_GROUP_CHAT_ID)
def handle_group_messages(message):
    # Удаление не нужного текста из сообщения
    cleaned_text = message.text.replace("unwanted_text", "")
    
    # Пересылка очищенного сообщения в канал
    bot.send_message(YOUR_CHANNEL_ID, cleaned_text)

# Запуск бота
bot.polling()
